<%- include("includes/header.ejs") %>
<head>
    <link rel="stylesheet" href="/css/new.css">
</head>
<body>
    <div class="image">
    <img src="./myassets/amz.png" alt="image">
    </div>
    <div class="text">
        <form action="/new" method="post" class="needs-validation" novalidate>
        <h2>Create Account</h2>
        <div><br>
        <label for="name" class="form-label">Your name</label>
        <input id="name" name="name" placeholder="Enter your name" class="form-control" required><br>
        </div>
        <div>
            <label for="email" class="form-label">Email</label>
            <input id="email" name="email" type="email" placeholder="Enter your email" class="form-control" required>
            
        </div><br>
        
        <div>
            <label for="password" class="form-label">Password</label><br>
            <input id="password" type="password" name="password" placeholder="Atleast 6 characters" class="form-control" minlength="7" maxlength="16" required>
            <div class="invalid-feedback">
                Password should be atleast 6 characters.
            </div>
        </div><br>
        
        <button>Submit</button>
        </form><br>
        <div class="new">
            <p>Already have an account? &nbsp;
            <a href="/signin" style="text-decoration: none">Sign in</a>
            </p><br>
            
        </div>

    </div><br><br>
   
   
    <%- include("includes/footer.ejs") %>
    <script src="/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>