<%- include("includes/header1.ejs") %>

<link rel="stylesheet" href="/css/view.css">
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">

<div class="Product-list">
  <h1>Product List</h1>
  <div>
    <% if (user) { %>
    <h3>Welcome <%= user.name %>! </h3>
    <% } %>
  </div>
  
  <div class="products">
    <% products.forEach(product => {  %>
      <div class="product-item">
        
          <h2><%= product.title %> </h2>
          <img src= "<%= product.image %>" >
          <h4>Price: <%= product.price %> AED </h4>
          <p>Rating: <%= product.rating %> </p>
          <!-- <p>Quantity: < product.quantity%>  </p> -->
          <form action="/cart" method="post">                     
            <input type="hidden" name="product" value="<%= product._id %>">
            <input type="hidden" name="quantity" value="1"> 
            <!-- <input type="hidden" name="user" value="< user._id %>"></input> -->
            <button class="cart" type="submit">Add to Cart</button>
          </form>
      </div>
    <%} )%>
  </div>
</div> 
<script>
   window.isLoggedIn =  "<%= (user) ? 'true' : 'false' %>" ;
</script>
<script src="/js/index.js"></script>
<script src="/js/view.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




